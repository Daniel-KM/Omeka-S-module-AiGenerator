{
    "name": "daniel-km/omeka-s-module-ai-generator",
    "description": "Module for Omeka S that allows to generate resource metadata through an AI generator and to validate them.",
    "type": "library",
    "license": "CECILL-2.1",
    "authors": [
        {
            "name": "Daniel Berthereau",
            "email": "Daniel.packagist@Berthereau.net"
        }
    ],
    "homepage": "https://gitlab.com/Daniel-KM/Omeka-S-module-AiGenerator",
    "support": {
        "issues": "https://gitlab.com/Daniel-KM/Omeka-S-module-AiGenerator/-/issues",
        "forum": "https://forum.omeka.org/"
    },
    "keywords": [
        "Omeka S",
        "module",
        "curation",
        "AI generator",
        "ChatGPT"
    ],
    "require": {
        "openai-php/client": "^0.14",
        "symfony/http-client": "^7.3",
        "nyholm/psr7": "^1.8"
    },
    "replace": {
        "psr/container": "*",
        "symfony/polyfill-php80": "*"
    },
    "autoload": {
        "psr-4": {
            "Translate\\": "src/"
        }
    },
    "config": {
        "platform": {"php": "8.2"},
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
